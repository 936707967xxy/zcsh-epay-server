<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
  
<mapper namespace="com.froad.agre.modules.config.mapper.FrConfigMapper">  
  
	<resultMap id="ResultMap" type="com.froad.agre.modules.config.po.FrConfig">
		<id column="ID" jdbcType="BIGINT" property="id" />
		<result column="CREATE_TIME" jdbcType="TIMESTAMP" property="createTime" />
		<result column="UPDATE_TIME" jdbcType="TIMESTAMP" property="updateTime" />
		<result column="VALUE" jdbcType="VARCHAR" property="value" />
		<result column="KEY" jdbcType="VARCHAR" property="key" />
		<result column="GROUP_NAME" jdbcType="VARCHAR" property="groupName" />
		<result column="SUB_GROUP_NAME" jdbcType="VARCHAR" property="subGroupName" />
		<result column="REMARK" jdbcType="VARCHAR" property="remark" />
	</resultMap>
	
	<select id="getConfigByKey" resultMap="ResultMap" parameterType="string">
        SELECT VALUE FROM FR_CONFIG WHERE KEY=#{key}
    </select> 
    
</mapper>